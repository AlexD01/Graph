<Window x:Class="WpfApp2.put"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="put" Height="450" Width="800">
    <Grid Name="Grid"   >
        <Canvas Name="Canvas"   Margin="0,0,232,0"  Background="White"  >
            <TextBox  Name="T2"  Width="232" Canvas.Left="560" Height="150" />
            <TextBox Name="V2" Height="20" TextWrapping="Wrap"  Width="116" Canvas.Left="676" Canvas.Top="150" PreviewTextInput="V1_PreviewTextInput"/>
            <TextBox Name="V1" Height="20" TextWrapping="Wrap"  Width="116" Canvas.Left="560" Canvas.Top="150" PreviewTextInput="V1_PreviewTextInput"/>
            <Button Content="Найти путь" Width="232" Canvas.Left="560" Canvas.Top="170" Click="Button_Click"/>
            <Button Content="Обход в ширину" Width="116" Canvas.Left="560" Canvas.Top="190" Click="Button_Click_1"/>
            <Button Content="Обход в глубину" Width="116" Canvas.Left="676" Canvas.Top="190" Click="Button_Click_2"/>
            <TextBox Name="VER"       Height="20" TextWrapping="Wrap" Width="232" Canvas.Left="560" Canvas.Top="210" PreviewTextInput="V1_PreviewTextInput"/>
        </Canvas>
    </Grid>
</Window>
